{
  "name": "ValueBet Engine - Football",
  "description": "Application Streamlit pour la d√©tection de value bets en football",
  "build": {
    "command": "pip install -r requirements_streamlit.txt",
    "output": "."
  },
  "run": {
    "command": "streamlit run streamlit_app.py --server.port $PORT --server.address 0.0.0.0 --server.headless true"
  },
  "env": {
    "STREAMLIT_SERVER_HEADLESS": "true",
    "STREAMLIT_BROWSER_GATHER_USAGE_STATS": "false",
    "FOOTBALL_DATA_API_KEY": "${{ secrets.FOOTBALL_DATA_API_KEY }}",
    "ODDS_API_KEY": "${{ secrets.ODDS_API_KEY }}",
    "DEFAULT_BANKROLL": "10000",
    "DEFAULT_KELLY_FRACTION": "0.25",
    "DEFAULT_MAX_STAKE_PCT": "2.0",
    "DEFAULT_MAX_STAKE_ABS": "500"
  }
}